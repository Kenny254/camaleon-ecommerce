<div class="order_details">
    <%= render plugin_view('partials/cart_widget') %>
  <h1><%= t('.title', default: 'Order Details') %>: <%= @order.slug %></h1>
  <div class="row">
    <div class="col-md-4">
        <h4><%= t('.customer_info', default: 'Customer Info') %></h4>
        <ul class="ec-list-orders-address">
          <li><strong><%= t('.name', default: 'Name') %>:</strong> <span> <%= @order.details.customer %></span></li>
          <li><strong><%= t('.email', default: 'Email') %>:</strong> <span> <%= @order.details.email %></span></li>
          <li><strong><%= t('.phone', default: 'Phone') %>:</strong> <span> <%= @order.details.phone %></span></li>
        </ul>

        <h4><%= t('.billing_address', default: 'Billing Address') %></h4>
        <% detail = @order.get_meta("billing_address") %>
        <ul class="ec-list-orders-address">
          <li><strong><%= t('.name', default: 'Nombre') %>:</strong> <span><%= detail[:first_name] %> <%= detail[:last_name] %></span></li>
            <li><strong><%= t('.details', default: 'Details') %>:</strong> <br> <span><%= t('.address', default: 'Address1') %>: <%= detail[:address1] %> <br/><%= t('.address', default: 'Address') %>2: <%= detail[:address2] %> <br/> <%= t('.city', default: 'City') %>: <%= detail[:city] %> <br/>  <%= t('.state', default: 'State') %>: <%= detail[:state] %> <br/>  <%= t('.zip_code', default: 'Zip code') %>: <%= detail[:zip] %> <br/> <%= t('.country', default: 'Country') %>: <%= detail[:country] %></span></li>
        </ul>

        <h4><%= t('.shipping_address', default: 'Shipping Address') %></h4>
        <% detail = @order.get_meta("shipping_address") %>
        <ul class="ec-list-orders-address">
          <li><strong><%= t('.name', default: 'Nombre') %>:</strong> <span><%= detail[:first_name] %> <%= detail[:last_name] %></span></li>
          <li><strong><%= t('.details', default: 'Details') %>:</strong> <br> <span><%= t('.address', default: 'Address1') %>: <%= detail[:address1] %> <br/><%= t('.address', default: 'Address') %>2: <%= detail[:address2] %> <br/> <%= t('.city', default: 'City') %>: <%= detail[:city] %> <br/>  <%= t('.state', default: 'State') %>: <%= detail[:state] %> <br/>  <%= t('.zip_code', default: 'Zip code') %>: <%= detail[:zip] %> <br/> <%= t('.country', default: 'Country') %>: <%= detail[:country] %></span></li>
        </ul>
    </div>
    <div class="col-md-8">
      <h4><%= t('.title_products', default: 'Products and Payments') %></h4>
      <%= render partial: 'plugins/ecommerce/partials/table_order_products', locals: {order: @order} %>

      <table class="table table-bordered">
        <tbody>
        <tr>
          <th><%= t('.payment_type', default: 'Type Payment') %></th>
          <th></th>
        </tr>

        <tr>
          <td><%= @order.payment_method.name  rescue 'Not Payment' %></td>
          <td><% if @order.get_meta("payment")[:amount].to_f > 0 && @order.unpaid? %>
                <a href="<%= plugins_ecommerce_order_select_payment_path(order: @order.slug) %>" class="btn btn-success btn-sm"><%= t('.buy_now', default: 'Buy Now') %></a>
                <a href="<%= plugins_ecommerce_order_select_payment_path(order: @order.slug, cancel: true) %>" class="btn btn-danger btn-sm"><%= t('.cancel_order', default: 'Cancel Order') %></a>
            <% else %>
                  <%= raw @order.the_pay_status %>
            <% end  %>
          </td>
        </tr>
        </tbody>
      </table>

      <table class="table table-bordered">
        <tbody>
        <tr>
          <th><%= t('.shipping_method', default: 'Shipping Method') %></th>
          <th><%= t('.date_shipped', default: 'Shipped Date') %></th>
          <th><%= t('.track_url', default: 'URL Tracking') %></th>
        </tr>
        <tr>
          <td><%= @order.shipping_method.name rescue t('.no_shipping', default: 'Not Shipped Assigned') %></td>
          <td><%= @order.details.shipped_at || t('.no_shipped', default: 'Not Shipped') %></td>
          <td><%= @order.the_url_tracking %></td>
        </tr>
         </tbody>
      </table>
      <div class="text-center">
      </div>
    </div>
  </div>
</div>
